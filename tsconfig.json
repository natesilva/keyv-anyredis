{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"outDir": "build",
		"rootDir": ".",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020"
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["node_modules"]
}
